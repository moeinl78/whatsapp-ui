<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roomCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="72dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#b8e994"
    app:contentPadding="16dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/roomMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_content"
            android:textColor="@color/black_200"
            android:textSize="14sp"
            />

        <FrameLayout
            android:id="@+id/roomMessageInfoFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            >

            <ImageView
                android:id="@+id/roomDoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_done_all_24"
                android:layout_gravity="end|center_vertical"
                app:tint="@android:color/holo_blue_dark"
                />

            <TextView
                android:id="@+id/roomMessageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="32dp"
                android:text="2:23 PM"
                android:textSize="13sp"
                android:textColor="@color/gray"
                />

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>